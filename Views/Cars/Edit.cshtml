@model Cars
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Edit Car Rental</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="CarId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Model" class="control-label">Model Name:</label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="RentalCompany" class="control-label">Rental Company:</label>
                            <input asp-for="RentalCompany" class="form-control" rows="3"></input>
                            <span asp-validation-for="RentalCompany" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label">Price Per Day</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AvailabilityStartDate" class="control-label">Available From:</label>
                            <input asp-for="AvailabilityStartDate" type="date" class="form-control" />
                            <span asp-validation-for="AvailabilityStartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AvailabilityEndDate" class="control-label">Available To:</label>
                            <input asp-for="AvailabilityEndDate" type="date" class="form-control" />
                            <span asp-validation-for="AvailabilityEndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="file" class="control-label">Upload Image</label>
                            @if (Model.ImagePath != null)
                            {
                                <div>
                                    <img src="@Url.Content(Model.ImagePath)" alt="Current Image" style="max-width:100px; max-height:100px;">
                                </div>
                            }
                            <input type="file" class="form-control" id="file" name="file" accept="image/*" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}