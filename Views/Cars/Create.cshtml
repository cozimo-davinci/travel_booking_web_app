@model Cars

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h1>Create Car Rental</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="form-group">
                            <label asp-for="Model" class="control-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="Model">
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RentalCompany" class="control-label"></label>
                            <input asp-for="RentalCompany" class="form-control" rows="3" placeholder="RentalCompany"></input>
                            <span asp-validation-for="RentalCompany " class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="file" class="control-label">Upload Image</label>
                            <input type="file" class="form-control" id="file" name="file" accept="image/*" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="AvailabilityStartDate" class="control-label"></label>
                            <input asp-for="AvailabilityStartDate" type="date" class="form-control">
                            <span asp-validation-for="AvailabilityStartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AvailabilityEndDate" class="control-label"></label>
                            <input asp-for="AvailabilityEndDate" type="date" class="form-control">
                            <span asp-validation-for="AvailabilityEndDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>